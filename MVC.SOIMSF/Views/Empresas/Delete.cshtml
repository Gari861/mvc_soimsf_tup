@model MVC.SOIMSF.Models.EmpresasViewModel

@{
    ViewData["Title"] = "Eliminar Empresa";
}

<h1>Eliminar Empresa</h1>

<hr />
<div>
    <h4>¿Estás seguro de que deseas eliminar esta empresa?</h4>
    <div>
        <dl class="row">
            <dt class="col-sm-2">Id</dt>
            <dd class="col-sm-10">@Model.Id</dd>

            <dt class="col-sm-2">Nombre</dt>
            <dd class="col-sm-10">@Model.Nombre</dd>

            <dt class="col-sm-2">Dirección</dt>
            <dd class="col-sm-10">@Model.Direccion</dd>

            <dt class="col-sm-2">Teléfono</dt>
            <dd class="col-sm-10">@Model.Telefono</dd>

            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@Model.Email</dd>

            <dt class="col-sm-2">Cuit</dt>
            <dd class="col-sm-10">@Model.Cuit</dd>

            <dt class="col-sm-2">IdLocalidad</dt>
            <dd class="col-sm-10">@ViewBag.Localidades</dd>

        </dl>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
