@model MVC.SOIMSF.Models.LocalidadesViewModel

@{
    ViewData["Title"] = "Crear Localidad";
}

<h1>Crear Localidad</h1>
<p class="text-muted">Los campos marcados con <span class="text-danger">*</span> son obligatorios.</p>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Nombre" class="control-label"></label><span class="text-danger">*</span>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-success">Crear</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
