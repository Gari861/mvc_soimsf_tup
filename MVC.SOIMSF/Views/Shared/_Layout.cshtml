<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVC.SOIMSF</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVC.SOIMSF.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom border-bottom box-shadow mb-3 fixed-top">
            <div class="container-fluid">
                <div id="navbar-brand">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-gavel"></i> S.O.I.M.S.F.
                    </a>
                </div>
                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarNav"
                        aria-controls="navbarNav"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link nav-highlight" asp-area="" asp-controller="Afiliados" asp-action="Index">
                                <i class="fas fa-users"></i> Afiliados
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="EstadosDeAfiliados" asp-action="Index">
                                <i class="fas fa-user-check"></i> Estados Afiliados
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="SituacionesDeRevista" asp-action="Index">
                                <i class="fas fa-briefcase"></i> Situaciones de Revista
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-highlight" asp-area="" asp-controller="PracticasAsistenciales" asp-action="Index">
                                <i class="fas fa-stethoscope"></i> Prácticas Asistenciales
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="EstadosDePracticas" asp-action="Index">
                                <i class="fas fa-notes-medical"></i> Estados Prácticas
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="TiposDePracticas" asp-action="Index">
                                <i class="fas fa-procedures"></i> Tipos de Prácticas
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="TiposDeBeneficiarios" asp-action="Index">
                                <i class="fas fa-user-friends"></i> Tipos de Beneficiarios
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-highlight" asp-area="" asp-controller="Empresas" asp-action="Index">
                                <i class="fas fa-industry"></i> Empresas
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Localidades" asp-action="Index">
                                <i class="fas fa-map-marked-alt"></i> Localidades
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-highlight" asp-controller="Authentication" asp-action="Login">
                                <i class="fas fa-sign-in-alt"></i> Sesión
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <div class="row align-items-center">
                <!-- Botón alineado a la izquierda -->
                <div class="col-auto text-start">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Inicio
                    </a>
                </div>
                <div class="col text-center">
                    2024 - SINDICATO OBRERO DE LA INDUSTRIA MADERERA SAN FRANCISCO  -
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-primary">
                        Contacto y Política de Privacidad
                    </a>
                </div>
                <div class="col-auto">
                    <img src="/Fotografias/SOIMSF.png" alt="SOIMSF Logo" style="height: 30px; width: auto;">
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
