@model MVC.SOIMSF.Models.SituacionesDeRevistaViewModel

<h2>Editar Situación de Revista</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label for="Nombre" class="form-label">Nombre de la Situación de Revista:</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="text-danger">Corrige los errores antes de guardar.</div>
    }
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>

<a asp-action="Index" class="btn btn-secondary mt-3">Volver a la Lista</a>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/3.2.13/jquery.validate.unobtrusive.min.js"></script>
}
